#!/bin/sh

usage() {
    cat <<EOF
$(basename ${0}) is a daemontools helper tool

Usage:
    $(basename ${0}) [command] [<options>]

Options:
    --help, -h        print this
EOF
}

start() {
  SERVICE=$1
  echo "daelp start..."  
  sudo ln -s /root/$SERVICE/ /service/
}

stop() {
  echo "daelp stop..."
  sudo unlink /service/$SERVICE
}

# 第一引数をaction
ACTION=$1
shift

# 第二引数がservice
SERVICE=$2
shift

case "$ACTION" in
  "start" ) 
    start $SERVICE ;;
  "stop" ) 
    stop $SERVICE ;;
esac
